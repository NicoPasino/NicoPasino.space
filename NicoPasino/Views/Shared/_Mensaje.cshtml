<div id="_mensaje_" class="alert alert-@Model.Tipo position-fixed top-0 m-3 w-50 z-1" role="alert">
    @* <strong>@Model.Titulo</strong> *@
    <p>@Model.Mensaje</p>
</div>

<script>
    (function() {
        var el = document.getElementById('_mensaje_');
        if (!el) return;

        // Preparar transición suave
        el.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        el.style.opacity = '1';

        // Desaparecer tras 3 segundos y luego eliminar del DOM
        setTimeout(function() {
            el.style.opacity = '0';
            el.style.transform = 'translateY(-10px)';
            setTimeout(function() {
                if (el.parentNode) el.parentNode.removeChild(el);
            }, 500); // esperar a que termine la transición
        }, 3000);
    })();
</script>
